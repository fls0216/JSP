				<td> 날짜 </td>
				<td> 조회수 </td>
			</tr>
	<!-- 글 목록 출력 -->


<%
	for(int i=beginPerpage; i<(beginPerpage+numPerPage); i++){
		BoardDto board = boardlist.get(i);
%>
	<tr>
